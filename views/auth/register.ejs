<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>PHMS Register</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="/stylesheets/registerstyles.css">
</head>
<body>

<!-- Toast Container -->
<div id="toast-container">
  <% if (success_msg) { success_msg.forEach(msg => { %>
    <div class="toast text-bg-success border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body"><i class="fas fa-check-circle me-2"></i><%= msg %></div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    </div>
  <% }) } %>

  <% if (error_msg) { error_msg.forEach(msg => { %>
    <div class="toast text-bg-danger border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body"><i class="fas fa-exclamation-triangle me-2"></i><%= msg %></div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    </div>
  <% }) } %>
</div>

<div class="register-card">
  <h2><i class="fas fa-paw me-2"></i>PHMS | Register</h2>
  <form action="/register" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
      <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autocomplete="username">
      <div class="invalid-feedback text-start">Please choose a username.</div>
    </div>

    <div class="mb-3">
      <input type="password" id="password" name="password" class="form-control" placeholder="Password" required autocomplete="new-password">
      <div class="invalid-feedback text-start">Password is required.</div>
    </div>

    <div class="mb-4">
      <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirm Password" required autocomplete="new-password">
      <div class="invalid-feedback text-start" id="confirm-password-feedback">Please confirm your password.</div>
    </div>

    <button type="submit" class="btn btn-primary-phms w-100 mb-3">
      Register <i class="fas fa-arrow-right ms-2"></i>
    </button>

    <p class="mb-0">
      Already have an account? <a href="/login" class="text-link">Login</a>
    </p>
  </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
<script src="/javascripts/registerScript.js"></script>
</body>
</html>
